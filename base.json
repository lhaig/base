{
  "description": "packer ubuntu18 CIS-conformant base image with a 60Gb disk",
  "min_packer_version": "1.6.5",
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz",
        " auto=true",
        " fb=false",
        " initrd=/install/initrd.gz",
        " netcfg/get_domain={{user `domain`}}",
        " netcfg/get_hostname={{user `hostname`}}",
        " grub-installer/bootdev=/dev/sda",
        " noapic",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- <enter>"
      ],
      "boot_wait": "10s",
      "cpus": 2,
      "disk_size": 61440,
      "format": "ova",
      "guest_additions_mode": "disable",
      "guest_os_type": "Ubuntu_64",
      "headless": false,
      "http_directory": ".",
      "iso_checksum": "sha256:8c5fc24894394035402f66f3824beb7234b757dd2b5531379cb310cedfdf0996",
      "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/bionic/release/ubuntu-18.04.5-server-amd64.iso",
      "memory": 4096,
      "shutdown_command": "echo {{user `ubuntu_password`}} | sudo -S shutdown -P now",
      "ssh_clear_authorized_keys": true,
      "ssh_password": "{{user `ubuntu_password`}}",
      "ssh_port": 22,
      "ssh_timeout": "1800s",
      "ssh_username": "ubuntu",
      "type": "virtualbox-iso",
      "vm_name": "{{user `hostname`}}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "GMAIL={{user `email`}}"
      ],
      "execute_command": "echo '{{user `ubuntu_password`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "base-init.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "GRUBPASSWORD={{user `grubPassword`}}",
        "GMAIL={{user `email`}}",
        "GMAILPASSWORD={{user `emailPassword`}}",
        "REMOTELOGHOST={{user `remoteLogHost`}}",
        "HOSTNAME={{user `hostname`}}",
        "DOMAIN={{user `domain`}}"
      ],
      "execute_command": "echo '{{user `ubuntu_password`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "cis.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "GMAIL={{user `email`}}",
        "GMAILPASSWORD={{user `emailPassword`}}"
      ],
      "execute_command": "echo '{{user `ubuntu_password`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "base-clean.sh",
      "type": "shell"
    }
  ],
  "sensitive-variables": [
    "emailPassword"
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 8,
      "output": "u18.box"
    },
    {
      "type": "amazon-import",
      "ami_description": "Reduced, minimal Ubuntu 18 image with CIS compliance added.",
      "ami_name": "base",
      "s3_bucket_name": "{{user `s3_bucket`}}",
      "region": "{{user `region`}}",
      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "token": "{{user `aws_session_token`}}",
      "tags": {
        "Name": "{{user `hostname`}}"
      }
    }
  ]
}

